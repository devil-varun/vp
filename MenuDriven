#include<stdio.h>

int main(){
    int ch;
    float ar,ac,l,b,r;

    printf("Enter your choice \n 1. Calculate area of circle \n 2. Area of rectangle \n 3.Exit \n");
    scanf("%d",&ch);
    switch (ch)
    {
    case 1: printf("Enter the radius of the circle \n");
            scanf("%f",&r);
            ac=3.14*r*r;
            printf("Area of circle is %f",ac);
        break;
    
    case 2: printf("Enter length and breadth of rectangle \n");
            scanf("%f%f",&l,&b);
            ar=l*b;
            printf("Area of rectangle is %f \n",ar);
        break;
    case 3: 
           exit(1);
            break;
    }

    return 0;
}
